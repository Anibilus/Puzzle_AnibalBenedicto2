<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/relativeLayoutNivelDos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".selector_nvl2"
        tools:layout_editor_absoluteX="-60dp"
        tools:layout_editor_absoluteY="0dp">
        <TextView
            android:id="@+id/textViewOrdena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

        <GridLayout
            android:id="@+id/gridLayoutNivelDos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:columnCount="4"
            android:orientation="horizontal"
            android:rowCount="4">

            <!-- Fila 1 -->
            <ImageButton
                android:id="@+id/imageButton1"
                style="@style/PuzzleButton"
                android:src="@drawable/harry1"/>

            <ImageButton
                android:id="@+id/imageButton2"
                style="@style/PuzzleButton"
                android:src="@drawable/harry2"/>

            <ImageButton
                android:id="@+id/imageButton3"
                style="@style/PuzzleButton"
                android:src="@drawable/harry3"/>

            <ImageButton
                android:id="@+id/imageButton4"
                style="@style/PuzzleButton"
                android:src="@drawable/harry4"/>
            <ImageButton
                android:id="@+id/imageButton5"
                style="@style/PuzzleButton"
                android:src="@drawable/harry5"/>

            <ImageButton
                android:id="@+id/imageButton6"
                style="@style/PuzzleButton"
                android:src="@drawable/harry6"/>

            <ImageButton
                android:id="@+id/imageButton7"
                style="@style/PuzzleButton"
                android:src="@drawable/harry7"/>

            <ImageButton
                android:id="@+id/imageButton8"
                style="@style/PuzzleButton"
                android:src="@drawable/harry8"/>
            <ImageButton
                android:id="@+id/imageButton9"
                style="@style/PuzzleButton"
                android:src="@drawable/harry9"/>

            <ImageButton
                android:id="@+id/imageButton10"
                style="@style/PuzzleButton"
                android:src="@drawable/harry10"/>

            <ImageButton
                android:id="@+id/imageButton11"
                style="@style/PuzzleButton"
                android:src="@drawable/harry11"/>

            <ImageButton
                android:id="@+id/imageButton12"
                style="@style/PuzzleButton"
                android:src="@drawable/harry12"/>
            <ImageButton
                android:id="@+id/imageButton13"
                style="@style/PuzzleButton"
                android:src="@drawable/harry13"/>

            <ImageButton
                android:id="@+id/imageButton14"
                style="@style/PuzzleButton"
                android:src="@drawable/harry14"/>

            <ImageButton
                android:id="@+id/imageButton15"
                style="@style/PuzzleButton"
                android:src="@drawable/harry15"/>

            <ImageButton
                android:id="@+id/imageButton16"
                style="@style/PuzzleButton"
                android:src="@drawable/harry16"/>
        </GridLayout>
        <TextView
            android:id="@+id/textViewIntentos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gridLayoutNivelDos"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Intentos: 0"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonFinalizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewIntentos"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Finalizar Puzzle" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
